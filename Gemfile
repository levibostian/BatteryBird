# frozen_string_literal: true

source "https://rubygems.org"

# pin the fastlane version because I was getting error: 
# uninitialized constant FastlaneCore::UpdateChecker (NameError)  
#
# research shows that fastlane removed this code but plugins still use it. 
gem 'fastlane', '2.212.0'

# warning: abbrev was loaded from the standard library, but is not part of the default gems starting from Ruby 3.4.0.
# You can add abbrev to your Gemfile or gemspec to silence this warning.
gem 'abbrev'
gem 'fastlane-plugin-versioning_android'