{
    "tagFormat": "${version}",
    "branches": [
        "main"
    ],
    "plugins": [
        ["@semantic-release/commit-analyzer", {
            "preset": "conventionalcommits"
        }],
        ["@semantic-release/release-notes-generator", {
            "preset": "conventionalcommits"
        }],
        ["@semantic-release/exec", {
            "publishCmd": "fastlane android update_version next_version:${nextRelease.version} && fastlane android build_and_deploy"
        }],
        ["@semantic-release/github", {
            "labels": false,
            "successComment": false,
            "failTitle": false
        }]
    ]
}